{
  "source": {
    "include": [
      "src/index.js",
      "package.json",
      "README.md",
      "src/types/SidechatTypes.js",
      "src/classes/SidechatAPIClient.js",
      "src/classes/SidechatAPIError.js"
    ],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "encoding": "utf8",
    "readme": "./README.md",
    "destination": "docs/",
    "package": "./package.json",
    "recurse": true,
    "verbose": true,
    "template": "./node_modules/clean-jsdoc-theme",
    "theme_opts": {
      "default_theme": "dark",
      "homepageTitle": "Sidechat.js Documentation",
      "base_url": "https://micahlindley.com/sidechat.js/",
      "menu": [
        {
          "title": "Offsides (Sidechat for Android)",
          "link": "https://github.com/micahlt/offsides#README.md",
          "target": "_blank"
        }
      ],
      "sections": ["Classes", "Global"]
    }
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  }
}
